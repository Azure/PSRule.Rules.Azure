        "Properties": {
          "Description": "Minmum TLS version must be used on Storage accounts",
          "DisplayName": "Deny Storage Account Not Using Minumum TLS version",
          "Metadata": {
            "version": "1.0.0",
            "category": "Storage",
            "createdBy": "00000000-0000-0000-0000-000000000000",
            "createdOn": "2021-06-07T03:21:16.6955366Z",
            "updatedBy": "00000000-0000-0000-0000-000000000000",
            "updatedOn": "2022-03-22T12:58:04.8841964Z"
          },
          "Mode": "Indexed",
          "Parameters": {
            "effect": {
              "type": "String",
              "metadata": {
                "displayName": "Effect",
                "description": "Enable or disable the execution of the policy"
              },
              "allowedValues": [
                "Audit",
                "Deny",
                "Disabled"
              ],
              "defaultValue": "Deny"
            },
            "minimumTlsVersion": {
              "type": "String",
              "metadata": {
                "displayName": "TLS Version",
                "description": "Minimum TLS Version Required for Storage Accounts"
              },
              "allowedValues": [
                "TLS1_0",
                "TLS1_1",
                "TLS1_2"
              ],
              "defaultValue": "TLS1_2"
            }
          },
          "PolicyRule": {
            "if": {
              "allOf": [
                {
                  "field": "type",
                  "equals": "Microsoft.Storage/storageAccounts"
                },
                {
                  "field": "Microsoft.Storage/storageAccounts/minimumTlsVersion",
                  "notEquals": "[parameters('minimumTlsVersion')]"
                }
              ]
            },
            "then": {
              "effect": "[parameters('effect')]"
            }
          },
          "PolicyType": 1
        },
