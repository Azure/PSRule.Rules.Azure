      {
        "name": "tasksWithDefaults",
        "count": "[length(variables('tasks'))]",
        "input": {
          "Value": "[if(contains(variables('tasks')[copyIndex('tasksWithDefaults')], 'Value'), variables('tasks')[copyIndex('tasksWithDefaults')].Value, 0)]",
