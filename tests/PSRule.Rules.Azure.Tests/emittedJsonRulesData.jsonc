                                                    },
                                                    {
                                                        "field": "properties.storageProfile.imageReference.sku",
                                                        "like": "16_04*lts-gen2"
                                                    },
                                                    {
                                                        "field": "properties.storageProfile.imageReference.sku",
                                                        "like": "18.04*LTS"
                                                    },
                                                    {
                                                        "field": "properties.storageProfile.imageReference.sku",
                                                        "like": "18_04*lts-gen2"
                                                    },
                                                    {
                                                        "field": "properties.storageProfile.imageReference.sku",
                                                        "like": "20_04*lts"
                                                    },
                                                    {
                                                        "field": "properties.storageProfile.imageReference.sku",
                                                        "like": "20_04*lts-gen2"
                                                    }
